/* logo样式============================= */

.w_logo {
  width: 100%;
  height: 92rpx;
  margin-top: 120rpx;
}

.logo {
  width: 364rpx;
  height: 100%;
  background-color: red;
  margin: 0 auto;
}

.logo image {
  width: 100%;
  height: 100%;
}

/* 登陆框样式============================= */

/* 
.loginBox {

} */

.w_user {
  width: 100%;
  margin-top: 100rpx;
  padding: 0 82rpx;
  position: relative;
}
.warning{
  position: absolute;
  bottom: -50rpx;
  left: 152rpx;
  font-size: 26rpx;
  color: #F75959;
}
.user {
  width: 590rpx;
  height: 72rpx;
}

.w_icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
}

.w_icon image {
  width: 100%;
  height: 100%;
}

.w_input {
  display: inline-block;
  width: 516rpx;
  height: 60rpx;
  margin-top: 8rpx;
  margin-left: 14rpx;
  border-bottom: 1px solid #F75959;
  font-size: 26rpx;
}

/* 登陆按钮样式========================== */

.loginBtn {
  width: 100%;
  height: 88rpx;
  margin-top: 120rpx;
}

.btn {
  width: 586rpx;
  height: 100%;
  background-color: #888;  
  margin: 0 auto;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
}
button[disabled].btn{
  background-color: #888; 
  color: #fff; 
}
.btn.active{
  background-color: #F75959;
}
/* 底部样式================================ */

.footer {
  width: 100%;
  height: 50rpx;
  margin-top: 240rpx;
}

.footer_content {
  width: 240rpx;
  height: 100%;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #8c8c8c;
}

.footer_left, .footer_right {
  width: 48rpx;
  height: 1px;
  margin-top: 22rpx;
  background-color: #ccc;
}

.footer_left {
  float: left;
}

.footer_right {
  float: right;
}
