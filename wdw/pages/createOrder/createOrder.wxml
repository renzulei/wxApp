<view class="container">
  <view class="content">

    <view class='header'>
      <view class='header_icon'>
        <image src='/images/checked.png'></image>
      </view>
      <view class='header_top'>
        <text class='left_color'>商品列表(4）</text>
        <text>江苏富星A级单面涂布灰底白板纸......</text>
      </view>
      <view class='header_bom'>
        <text class='left_color left_size'>收货地址：</text>
        <text>育昌路369号  山东省潍坊市昌乐县</text>
      </view>
    </view>

    <view class='content_table'> 
      <view class="table">
        <view class="text clearfix">
          <view class='div'>
            <view class="box box_left">
              <view class='left'>
                <text>幅宽mm:</text>
              </view>
              <view class='right'>
                <input class='input'></input>
              </view>
            </view>
            <view class="box box_right">
              <view class='left'>
                <text>切长mm:</text>
              </view>
              <view class='right'>
                <input class='input'></input>
              </view>
            </view>
          </view>

          <view class='div'>
            <view class="box box_left">
              <view class='left'>
                <text>件数(不含运费):</text>
              </view>
              <view class='right'>
                <input class='input'></input>
              </view>
            </view>
            <view class="box box_right">
              <view class='left'>
                <text>吨数(吨):</text>
              </view>
              <view class='right'>
                <input class='input'></input>
              </view>
            </view>
          </view>

        </view>
        <view class='table_bom clearfix'>
          <text class='danjia'>1.单价：</text>
          <text class='table_color'>7000</text>
          <text class='table_left'>金额：</text>
          <text class='table_color'>9874983.0</text>

          <view class=' table_btn copy'>
            <image src='/images/checked.png'></image>
          </view>
          <view class=' table_btn del'>
            <text>删除</text>
          </view>
        </view>
      </view>
    </view>

  </view>

  <view class='footer'>
    <!-- 上部分 -->
    <view class='footer_top'>
      <text class='footer_left'>已选中规格：</text>
      <text class='footer_right'>4</text>
      <text class='footer_left'>总吨数：</text>
      <text class='footer_right'>1950</text>
      <text class='footer_left'>总金额：</text>
      <text class='footer_right'>2678943.12</text>
    </view>

    <!-- 下部分 -->
    <view class='footer_bom'>
        <view class='bom_left' bindtap='cancelTap'>
          <text>取消返回</text>
        </view>
      <view class='bom_right' bindtap='sopTap'>
        <text>创建订单</text>
      </view>
    </view>
  </view>
</view>