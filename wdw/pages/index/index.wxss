/* 搜索框 ============================*/

.w_search {
  width: 100%;
  height: 122rpx;
  background-color: #233142;
  position: relative;
  font-size: 0;
  padding-top: 22rpx;
}

.w_input {
  width: 708rpx;
  height: 78rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
}

.w_icon {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -21rpx;
  z-index: 2;
}

.w_icon image {
  width: 100%;
  height: 100%;
}

/* 背景图 ====================================*/

.w_bgc {
  width: 100%;
  height: 306rpx;
}

.w_bgc image {
  width: 100%;
  height: 100%;
}

/* 内容 */

/* .content {

} */

.w_title {
  width: 100%;
  height: 34rpx;
  margin: 20rpx 0;
}

.w_borderLeft {
  /* width: 260rpx; */
  height: 34rpx;
  line-height: 34rpx;
  border-left: 15rpx solid red;
  margin-left: 20rpx;
}

.w_borderLeft text {
  display: block;
  margin-left: 20rpx;
  line-height: 34rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #5E5E5E;
}

/* 图片内容展示区 =================================== */

.w_contentShow {
  width: 100%;
  height: 220rpx;
  overflow-x: auto;
  white-space: nowrap;
  padding: 0 20rpx;
}

.w_contentShow image {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
  left: 0rpx;
  top: 0;
  bottom: 0;
  right: 0rpx;
  z-index: -1;
}

.w_titleContent {
  width: 100%;
  height: 80%;
}

.smbox {
  width: 500rpx;
  height: 100%;
  position: relative;
  padding: 20rpx;
  display: inline-block;
  color: #fff;
  margin-right: 40rpx;
}

.smbox:last-child {
  margin-right: 0;
}

.w_titleContent, .title_one {
  width: 100%;
}

.w_titleContent, .title_one text {
  color: #fff;
  font-size: 26rpx;
  box-sizing: border-box;
  font-weight: 600; 
  margin-right: 10rpx;
}

.w_border {
  width: 100%;
  margin-top: 20rpx;
}

.w_border text {
  display: block;
  font-size: 28rpx;
  float: left;
  padding: 0 20rpx;
  margin-right: 16rpx;
  text-align: center;
  line-height: 46rpx;
  border: 1px solid #fff;
  font-weight: 300;
  border-radius: 10rpx;
}

.w_price {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fdf2d0;
  margin-top: 10rpx;
}

/* 供应链样式======================================== */

.w_nav {
  width: 100%;
}

.nav {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}

.nav image {
  width: 194rpx;
  height: 196rpx;
}
