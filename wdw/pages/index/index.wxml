<import src="../../wxParse/wxParse.wxml" />

<view class='contenter'>
  <!-- 搜索框 -->
  <view class='w_search'>
    <view class='input-wrap'>
      <view class='w_icon' bindtap='handleSearch'>
        <image src='/images/search.png'></image>
      </view>
      <input placeholder-class="phcolor" class='w_input' placeholder='输入产品名称或关键词进行搜索' bindinput="upSeachValue"></input>
    </view>
  </view>

  <!-- //背景图 -->
  <view class='w_bgc'>
    <image src='{{ bgc }}'></image>
  </view>
  <view class='content'>
    <view class='w_title'>
      <view class='w_borderLeft'>
        <text>促销商品/主营产品</text>
      </view>
    </view>
  </view>

  <!-- =========================== -->
  <!-- 商品展示 -->
  <view class='w_contentShow'>
    <view class='smbox' wx:for="{{shop}}" wx:key="{{item.productId}}">
      <image src="/images/bgc1.png"></image>
      <view class='w_titleContent'>
        <view class='title_one'>
          <text>{{item.productName}}</text>
        </view>
        <view class='w_border clearfix'>
          <text>{{item.physicalStateName}}</text>
          <text>{{item.itemCategoryName}}</text>
          <text>{{item.supperCategoryName}}</text>
        </view>
        <view class='w_price'>
          <text>￥{{item.unitPrice}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
<!-- ================ -->
<!-- 供应链 -->
<view class='w_footer'>
  <view class='content'>
    <view class='w_title'>
      <view class='w_borderLeft'>
        <text>{{ categoryName }}</text>
      </view>
    </view>
  </view>
  <view class='w_nav'>
    <view class='nav' wx:for="{{replyTemArray}}" wx:key="">
      <view class='explainName'>{{businessExplain[index].explainName}}</view>
      <template is="wxParse" data="{{wxParseData:item}}" />
    </view>

  </view>
</view>