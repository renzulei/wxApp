.container {
  width: 100%;
  background-color: #fff;
}

/* 整个盒子 */

.content {
  width: 100%;
  padding-bottom: 140rpx;
  background-color: #fff;
}

.content_table {
  width: 100%;
}

/* 内容框 */

.table {
  width: 706rpx;
  height: 288rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0px 0px 8px #ccc;
  margin-bottom: 20rpx;
  margin: 30rpx auto;
}

.text {
  width: 100%;
  font-size: 24rpx;
  color: #5e5e5e;
  font-weight: bold;
}

/* 每个小盒子 */

.box {
  width: 44%;
  background-color: #f6f6f6;
  float: left;
  margin-left: 30rpx;
  margin-top: 30rpx;
  border-radius: 8rpx;
  box-shadow: 1px 1px 9px #ccc;
  line-height: 66rpx;
  padding: 0 20rpx;
}

.right_color {
  color: #f75959;
  display: inline-block;
}

.table_bom {
  width: 100%;
  line-height: 50rpx;
  margin-top: 22rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 0 20rpx;
}

.left {
  margin-left: 26rpx;
}

.table_btn {
  width: 86rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 14rpx;
  border-radius: 8rpx;
  text-align: center;
}

/* 复制按钮 */

/* .copy {
  background-color: #576b95;
  color: #fff;
} */

/* 删除按钮 */

.del {
  float: right;
  margin-right: 30rpx;
  color: #f75959;
  border: 1px solid #f75959;
}

/* 左边图标 */

.plsu {
  width: 36rpx;
  height: 36rpx;
  float: left;
  background-color: #576b95;
  margin-right: 10rpx;
  border-radius: 8rpx;
  margin-top: 6rpx;
}

/* 左边图标 */

.plsu image {
  width: 36rpx;
  height: 36rpx;
}

/* 底部样式 */

.footer {
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}

.footer_top {
  background-color: #9fb9ef;
  text-align: right;
  padding: 0 60rpx;
  height: 56rpx;
  line-height: 56rpx;
}

.footer_right {
  color: #fff;
  margin-right: 20rpx;
}

.footer_left {
  color: #fff3d0;
}

.footer_bom {
  width: 100%;
  background-color: gold;
}

.bom_left, .bom_right {
  width: 50%;
  float: left;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-weight: normal;
}

.bom_left {
  background-color: #888;
}

.bom_right {
  background-color: #f75959;
}

/* header样式 */

.header {
  width: 706rpx;
  height: 140rpx;
  margin: 0 auto;
  background-color: #9fb9ef;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
  border-radius: 8rpx;
  border-top: 1px solid #9fb9ef;
  font-size: 24rpx;
  position: relative;
}

.bgc_header {
  width: 100%;
  height: 200rpx;
  background-color: #f6f6f6;
  border-top: 1rpx solid #f6f6f6;
}

.header_top, .header_bom {
  height: 30rpx;
  margin-top: 24rpx;
  line-height: 30rpx;
  color: #fff;
  font-weight: bold;
}

.bom_text {
  font-weight: normal;
  font-size: 22rpx;
}

.left_color {
  color: #fff3d0;
  font-size: 30rpx;
  margin-left: 100rpx;
}

.left_size {
  font-size: 24rpx;
}

.header_icon {
  width: 36rpx;
  height: 36rpx;
  background-color: #576b95;
  position: absolute;
  top: 24rpx;
  left: 30rpx;
  border-radius: 4rpx;
}

.header_icon image {
  width: 36rpx;
  height: 36rpx;
}

/*商品列表显示隐藏  */

.show {
  display: block;
}

.hide {
  display: none;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-left: 240rpx;
  margin-right: 16rpx;
}

.icon image {
  width: 32rpx;
  height: 32rpx;
}

/* 头部的样式   ===交易主体  */

.hint {
  width: 708rpx;
  height: 202rpx;
  background-color: #9fb9ef;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  padding: 36rpx 20rpx;
  margin: 30rpx auto;
}

.title1 {
  width: 100%;
  line-height: 26rpx;
  margin-bottom: 20rpx;
}

.title2 {
  margin-bottom: 20rpx;
}

.relation {
  margin-left: 80rpx;
}

.title_left {
  color: #fff3d0;
}

.title_right {
  color: #fff;
}

/*订单类型区域的样式  */

.order {
  width: 100%;
  padding: 0 40rpx;
}

.type {
  font-size: 28rpx;
  font-weight: bold;
  color: #4f4f4f;
  margin-bottom: 30rpx;
}
.inline-block{
  display: inline-block
}
.title {
  margin-top: 30rpx;
}

.right_color {
  color: #f86d6d;
}

.size_right {
  margin-left: 140rpx;
}

.right {
  margin-left: 196rpx;
}


.bgc {
  height: 200rpx;
}

.bgc1 {
  height: 754rpx;
}

.div {
  width: 100%;
  height: 554rpx;
  background-color: #F6F6F6;
}
.listContent{
  padding: 10rpx 0;
  background-color: #f6f6f6;
}
