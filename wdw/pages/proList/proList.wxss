}

/*模态框样式  */

.motai {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.2;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}

/*筛选样式  */

.screen {
  width: 564rpx;
  height: 1298rpx;
  background-color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 50;
}

.screen_content {
  width: 100%;
  font-size: 28rpx;
  font-weight: 600;
  color: #7e7e7e;
}

.screen_title {
  line-height: 68rpx;
  background-color: #f2f2f2;
  padding: 0 20rpx;
}

.screen_text {
   background-color: pink; 
  font-size: 22rpx;
  text-align: left;
  padding: 10rpx;
}

.list {
  padding: 14rpx 38rpx;
  display: inline-block;
  margin: 16rpx;
  background-color: #f2f2f2;
  border-radius: 8rpx;
}

.list_color {
  color: #fff;
  background-color: #f75959;
}

.border {
  border-bottom: 1px solid #e1e1e1;
}

.screen_btn {
  height: 200rpx;
  background-color: pink;
  border-top: 1px solid pink;
}

.button {
  height: 60rpx;
  margin-top: 70rpx;
  /* padding: 0 60rpx; */
}

.end {
  width: 170rpx;
  line-height: 60rpx;
  float: right;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  margin-right: 50rpx;
  border-radius: 8rpx;
}

.end_left {
  background-color: #fff;
  color: #e60002;
}

.end_right {
  background-color: #f75959;
  color: #fff;
}
