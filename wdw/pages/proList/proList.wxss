.container {
  width: 100%;
  position: relative;
}

/* 搜索框 ============================*/

.w_search {
  width: 100%;
  height: 122rpx;
  background-color: #233142;
  position: relative;
  font-size: 0;
  padding-top: 22rpx;
}

.w_input {
  width: 708rpx;
  height: 78rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
}

.w_icon {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -21rpx;
  z-index: 2;
}

.w_icon image {
  width: 100%;
  height: 100%;
}

.content_title {
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}

.title {
  display: inline-block;
  width: 33.33%;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #7e7e7e;
}

.border {
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}

/* 上下箭头样式 */

.left, .right {
  width: 20rpx;
  height: 40rpx;
  position: absolute;
  top: 24rpx;
  left: 160rpx;
}

.right {
  position: absolute;
  top: 24rpx;
  left: 410rpx;
}

.arrows_top {
  width: 0rpx;
  border-top: 14rpx solid #fff;
  border-bottom: 14rpx solid #f75959;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  top: -14rpx;
}

.arrows_bottom {
  width: 0rpx;
  border-top: 14rpx solid #5f5c5b;
  border-bottom: 14rpx solid #fff;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  top: 18rpx;
}

.arrows_top_tow {
  width: 0rpx;
  border-top: 14rpx solid #fff;
  border-bottom: 14rpx solid #5f5c5b;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  top: -14rpx;
}

.arrows_bottom_tow {
  width: 0rpx;
  border-top: 14rpx solid #f75959;
  border-bottom: 14rpx solid #fff;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  top: 18rpx;
}

.icon {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 50rpx;
  top: 18rpx;
}

.icon image {
  width: 34rpx;
  height: 34rpx;
}

/* 内容样式====================== */

.content {
  width: 100%;
  padding: 0rpx 20rpx;
}

.box {
  width: 706rpx;
  height: 218rpx;
  background-color: #fff;
  margin: 0 auto;
  padding: 20rpx;
  font-size: 26rpx;
  box-shadow: 0px 0px 8px #ccc;
  margin-bottom: 24rpx;
}

.box_title {
  font-weight: 600;
  color: #5e5e5e;
}

.box_text {
  margin-top: 20rpx;
  color: #8c8c8c;
}

.text {
  display: inline-block;
  line-height: 46rpx;
  background-color: #f2f2f2;
  margin-right: 20rpx;
  padding: 0 20rpx;
}

.del {
  float: right;
  margin-right: 30rpx;
  line-height: 46rpx;
  color: #576b95;
}

.price {
  margin-top: 30rpx;
  font-weight: 600;
  color: #f75959;
}

.shopping {
  width: 146rpx;
  line-height: 52rpx;
  text-align: center;
  float: right;
  margin-right: 20rpx;
  margin-top: -50rpx;
  border: 1px solid #f75959;
  border-radius: 10rpx;
  color: #f75959;
  font-weight: 600;
}

/* footer底部样式 */

.footer {
  width: 100%;
  height: 714rpx;
  background-color: pink;
  position: fixed;
  bottom: 46rpx;
  font-size: 26rpx;
  font-weight: 600;
  /* transition: all 2s linear; */
  z-index: 20;
}

.footer_box {
  padding: 34rpx 20rpx;
  margin: 0 auto;
  width: 708rpx;
  color: #fff3d0;
  /* height: 202rpx; */
  border-radius: 10rpx;
  background-color: #9fb9ef;
  margin-top: 34rpx;
}

.right_color {
  color: #fff;
}

.footer_site {
  margin-top: 30rpx;
}

.hint {
  margin-top: 18rpx;
}

.hint_color {
  color: #fff;
  font-size: 22rpx;
}

.footer_icon {
  width: 48rpx;
  height: 48rpx;
  float: right;
  margin-top: -40rpx;
}

.footer_icon image {
  width: 48rpx;
  height: 48rpx;
}

.footer_title {
  height: 30rpx;
  margin-top: 30rpx;
  color: #5e5e5e;
  margin-left: 20rpx;
}

.footer_price {
  color: #f75959;
  margin-top: 30rpx;
}

.footer_bom {
  margin-top: 120rpx;
  padding: 0 20rpx;
  color: #5e5e5e;
  font-weight: 400;
  margin-bottom: 80rpx;
}

.btn {
  background-color: #f2f2f2;
  padding: 14rpx 30rpx;
  margin-left: 40rpx;
  border-radius: 8rpx;
  color: #8c8c8c;
}

