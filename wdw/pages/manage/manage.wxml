<import src="../../template/empty/empty.wxml" />

<view class="contaitner">
  <!-- table 区域======================================================== -->
  <view class='table clearfix'>
    <view class='table_left'>
      <text class='size_color'>订单编号:</text>
      <view class='choice'>
        <input class='input' placeholder='请输入订单编号'></input>
      </view>
      <text class='size_color'>商品名称:</text>
      <view class='choice'>
        <input class='input' placeholder='请输入商品名称'></input>
      </view>
    </view>

    <view class='table_right'>
      <text class='size_color'>支付状态:</text>
      <view class="section">
        <view class="section">
          <picker bindchange="bindPickerChange" value='{{payStatusIndex}}' range="{{payStatusArray}}" range-key='label'>
            <view class="picker">
              <view class='choice icon_position'>
                <view class='fl'>{{payStatusArray[payStatusIndex].label}}</view>
                <view class='icon'></view>
              </view>
            </view>
          </picker>
        </view>
      </view>
      <text class='size_color'>订单类型:</text>
      <view class="section">
        <view class="section">
          <picker value = '{{saleOrderTypeIndex}}' range='{{saleOrderTypeArray}}' range-key='label'>
            <view class="picker">
              <view class='choice icon_position'>
                <view class='fl'>{{saleOrderTypeArray[saleOrderTypeIndex].label}}</view>
                <view class='icon'></view>
              </view>
            </view>
          </picker>
        </view>
      </view>
      <view class='btn clearfix'>
        <view class='btn_search'>
          <text>搜索</text>
        </view>
        <view class='btn_eliminate'>
          <text>清除</text>
        </view>
      </view>
    </view>
  </view>
  <!-- ================================ -->
  <view class="container">
    <!-- tab导航栏 -->

    <view class='nav'>
      <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
        <view class="nav-item {{currentTab == idx ?'active':''}}" data-current="{{idx}}" bindtap="switchNav">{{navItem.text}}</view>
      </block>
    </view>
    <!-- 内容 -->
    <view class='swiper_box'>
      <view class='content_box'>
        <view class='header' wx:for="{{ shop0 }}" wx:for-item="navItem" wx:key="{{ idx }}">
          <view class='odd'>
            <text class='odd_left'>意向订单号:</text>
            <text class='odd_right'>{{ navItem.ding_dan }}</text>
            <text class='odd_left'>订单金额:</text>
            <text class='odd_right'>{{ navItem.jin_e }}</text>
          </view>
          <view class='state'>
            <text class='odd_left'>订单状态:</text>
            <text class='odd_right'>{{ navItem.zhuang_tai }}</text>
            <text class='odd_left'>下单时间:</text>
            <text class='odd_right'>{{ navItem.xiadan_shijian }}</text>
          </view>
          <view class='site' bindtap='particularsTap'>
            <text>点击查看订单详情(2)</text>
          </view>
        </view>
        <template is="emptyfill" wx:if="{{ shop0.length==0 }}" />
        <view class='hint'>没有更多数据了</view>
      </view>
    </view>
  </view>
</view>









