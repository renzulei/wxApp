/* pages/take/take.wxss */
@import '../../template/radio/radio.wxss';
.container {
  width: 100%;
  position: relative;
}

.content {
  /* width: 100%; */
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.box {
  width: 708rpx;
  height: 156rpx;
  background-color: #9fb9ef;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  position: relative;
}

.title {
  height: 40rpx;
}

.bom_text {
  height: 40rpx;
  margin-top: 20rpx;
}

.left_color {
  color: #fff3d0;
}

.left {
  margin-left: 80rpx;
}

.right_color {
  color: #fff;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}

.icon image {
  width: 40rpx;
  height: 40rpx;
}

.bottom {
  width: 100%;
  font-size: 24rpx;
  border-top: 1px solid #9fb9ef;
}

.bot {
  /* height: 50rpx; */
  margin-top: 30rpx;
}

.bot_icon {
  width: 46rpx;
  height: 46rpx;
  background-color: peru;
  border-radius: 50%;
  float: left;
  margin-left: 20rpx;
  margin-right: 30rpx;
}

.text {
  line-height: 50rpx;
  color: #4F4F4F;
}

.del {
  float: right;
  margin-right: 40rpx;
  line-height: 50rpx;
  color: red;
}

.footer {
  width: 100%;
  height: 90rpx;
  background-color: #F75959;
  position: absolute;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
}