        <view class=' table_btn copy'>
          <text>复制</text>
        </view> 
        <view class=' table_btn del'>
          <text>删除</text>
        </view>
      </view>  
    </view>
  </view>

  <view class='footer'>
    <!-- 上部分 -->
    <view class='footer_top'>
      <text class='footer_left'>总行数：</text>
      <text class='footer_right'>4</text>
