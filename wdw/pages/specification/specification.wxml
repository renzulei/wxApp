<view class="container">
  <view class="content">

    <view class="table">
      <view class="text clearfix">
        <view class='div'>
          <view class="box box_left">
            <view class='left'>
              <text>幅宽mm:</text>
            </view>
            <view class='right'>
              <input class='input'></input>
            </view>
          </view>
          <view class="box box_right">
            <view class='left'>
              <text>切长mm:</text>
            </view>
             <view class='right'>
              <input class='input'></input>
            </view>
          </view>
        </view>

        <view class='div'>
          <view class="box box_left">
            <view class='left'>
              <text>件数(不含运费):</text>
            </view>
            <view class='right'>
              <input class='input'></input>
            </view>
          </view>
          <view class="box box_right">
