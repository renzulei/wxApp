<view class="container">
  <view class="content">
    <view>
      <text class='addnew' bindtap='handleAdd'>添加</text>
    </view>
    <view class="table" wx:for="{{data}}" wx:key="{{index}}">
      <view class="text clearfix">
        <view class='div'>
          <view class="box box_left">
            <view class='left'>
              <text>幅宽mm:</text>
            </view>
            <view class='right'>
              <input 
                class='input' 
                type='number' 
                data-index='{{index}}' 
                data-code='{{code}}'
                value='{{item[code]}}'
                bindblur='attributeBlur'
              >
              </input>
            </view>
          </view>
          <view class="box box_right">
            <view class='left'>
              <text>切长mm:</text>
            </view>
            <view class='right'>
              <text wx:if="{{physicalStateCode == 'JT'}}">{{item[cutLength]}}</text>
              <input wx:else 
                class='input' 
                data-code='{{cutLength}}' 
                type='number' 
                data-index='{{index}}' 
                value='{{item[cutLength]}}'
                bindblur='attributeBlur'
              >
              </input>
            </view>
          </view>
        </view>
        <view class='div'>
          <view class="box box_left">
            <view class='left wider'>
              <text>件数(非必填):</text>
            </view>
            <view class='right thiner'>
              <input 
                class='input' 
                type='number' 
                data-index='{{index}}' 
                value='{{item.orderQuantity}}' 
                bindinput='orderQuantityChange'
                bindblur='orderQuantityBlur'
              >
              </input>
            </view>
          </view>
          <view class="box box_right">
            <view class='left'>
              <text>吨数(吨):</text>
            </view>
            <view class='right'>
              <input 
                class='input' 
                type='digit' 
                data-index='{{index}}' 
                bindinput='baseOrderQuantityChange'
                bindblur='baseOrderQuantityBlur' 
                value='{{item.baseOrderQuantity}}'
              >
              </input>
            </view>
          </view>
        </view>
      </view>
      <view class='table_bom clearfix'>
        <text class='danjia'>单价(不含运费):</text>
        <text class='table_color'>{{item.unitPrice}}</text>
        <text class='table_left'>金额:</text>
        <text class='table_color'>{{item.amount}}</text>
        <view data-index='{{index}}' class=' table_btn del' bindtap='deleteTap'>
          <text>删除</text>
        </view>
        <view data-record="{{item}}" class=' table_btn copy' bindtap='copyTap'>
          <text>复制</text>
        </view>

      </view>
    </view>
  </view>

  <view class='footer'>
    <!-- 上部分 -->
    <view class='footer_top'>
      <text class='footer_left'>总行数：</text>
      <text class='footer_right'>{{data.length}}</text>
      <text class='footer_left'>总吨数：</text>
      <text class='footer_right'>{{allT}}</text>
      <text class='footer_left'>总金额：</text>
      <text class='footer_right'>{{allA}}</text>
    </view>

    <!-- 下部分 -->
    <view class='footer_bom'>
      <view class='bom_left' bindtap='cancelTap'>
        <text>取消返回</text>
      </view>
      <view class='bom_right' bindtap='addCart'>
        <text>加入购物车</text>
      </view>
    </view>
  </view>
</view>