.container {
  width: 100%;
}
/* 整个盒子 */ 
.content {
  width: 100%;
  padding: 24rpx;
  /* background-color: #f6f6f6; */
  padding-bottom: 144rpx;
}
/* 内容框 */
.table {
  width: 706rpx;
  height: 288rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0px 0px 8px #ccc;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.text {
  width: 100%;
  font-size: 24rpx;
  color: #5e5e5e;
}

/* 每个小盒子 */
.box {
  width: 320rpx;
  height: 66rpx;
  background-color: #f6f6f6;
  border-radius: 8rpx;
  box-shadow: 1px 1px 9px #ccc;
  padding: 0 10rpx;
}

/* .div {
  width: 302rpx;
  height: 66rpx;
} */
.div {
width: 100%;
height: 66rpx;
margin-bottom: 30rpx;
}

.box_left {
  float: left;
}

.box_right {
  float: right;
}
.left {
  width: 126rpx;
  height: 66rpx;
  float: left;
  text-align: left;
  line-height: 66rpx;
}
.left.wider{
  width: 156rpx;
}
.left_text {
  display: block;
  width: 186rpx;
  height: 66rpx;
}


.right {
  width: 170rpx; 
  height: 66rpx;
  float: left;
  line-height: 66rpx;
  color: #f75959;
}
.right.thiner{
  width: 140rpx;
}
.thiner .input{
  width: 140rpx;
}
.input {
  display: block;
   width: 170rpx;
  height: 66rpx;
}

.table_bom {
  width: 100%;
  line-height: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  position: relative;
}

 .table_left {
  margin-left: 26rpx;
} 

.table_color {
  color: #f75959;
}
.addnew{
  display: inline-block;
  padding: 8rpx 26rpx;
  border: 1rpx solid #ccc;
  font-size: 24rpx;
  letter-spacing: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  color: #666;
}
.table_btn {
  float: right;
  width: 86rpx;
  /* display: inline-block; */
  vertical-align: middle;
  margin: 0 12rpx;
  border-radius: 8rpx;
  text-align: center;
}
/* 复制按钮 */
.copy {
  background-color: #576b95;
  color: #fff;
}
/* 删除按钮 */
.del {
  border: 1px solid #f75959;
  color: #f75959;
}


/* 底部样式 */
.footer {
  width: 100%;
  height: 144rpx;
  font-size: 24rpx;
  font-weight: bold;
  position: fixed;
  bottom: 0;
}

.footer_top {
  line-height: 56rpx;
  background-color: #9fb9ef;
  text-align: right;
  padding: 0 60rpx;
}

.footer_right {
  color: #fff;
  margin: 0 10rpx;
}

.footer_left {
  color: #fff3d0;
  margin-left: 20rpx;
}

.footer_bom {
  height: 88rpx;
  background-color: gold;
}

.bom_left, .bom_right {
  width: 50%;
  float: left;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-weight: normal;
}

.bom_left {
  background-color: #888;
}

.bom_right {
  background-color: #f75959;
}
