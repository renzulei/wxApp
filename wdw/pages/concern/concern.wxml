<import src="../../template/empty/empty.wxml" />

<view class="contaitner">
  <!-- table 区域======================================================== -->
  <view class='table clearfix'>
    <view class='table_left'>
      <text class='size_color'>区域:</text>
      <view class='choice'>
        <view class="section">
          <picker mode="region" bindchange="changeAddress">
            <view class="picker">
              <view class='input'>{{ area || "请选择所在区域" }}</view>
            </view>
          </picker>
          <view class='img_icon icon'></view>
        </view>
      </view>


      <text class='size_color'>公司名称:</text>
      <view class='choice'>
        <input class='input' placeholder='请输入商品名称' value='{{ partyName }}' bindinput='corName'></input>
      </view>
    </view>

    <view class='table_right'>
      <text class='size_color'>商品大类:</text>
      <view class="section">
        <view class="section">
          <picker bindchange="commodityTap" value="{{ categoryIndex }}" range="{{ arr }}" range-key="label">
            <view class="picker">
              <view class='choice icon_position'>
                <view class='input'>{{ arr[categoryIndex].label || "请选择商品大类" }}</view>
                <view class='icon'></view>
              </view>
            </view>
          </picker>
        </view>
      </view>
      <view class='btn clearfix'>
        <view class='btn_search' bindtap='handleSearch'>
          <text>搜索</text>
        </view>
        <view class='btn_eliminate' bindtap='clearUp'>
          <text>清除</text>
        </view>
      </view>
    </view>
  </view>
</view>

<view class="border"></view>
<!-- ======================内容区====================================== -->
<view class='content'>
  <view class='box_content clearfix' wx:for="{{ data }}" wx:key="{{ tradePartyId }}">
    <view>
      <text class='box_text'>区域：</text>
      <text>{{ item.province }}</text>
      <text class='box_text right'>商品大类：</text>
      <text>{{ item.categoryName }}</text>
    </view>
    <view>
      <text class='box_text'>联系人：</text>
      <text>{{ item.contactName }}</text>
      <text class='box_text right'>联系方式：</text>
      <text>{{ item.contactPhone }}</text>
    </view>
    <view>
      <text class='box_text'>公司名称：</text>
      <text>{{ item.partyName }}</text>
    </view>
    <view>
      <text class='box_text'>公司地址：</text>
      <text>{{ item.address }}</text>
    </view> 
    <view class='box_icon' catchtap='iconTap' data-index='{{index}}'>
      <image wx:if="{{!item.checked}}" src='/images/uncheck.png'></image>
      <image wx:else src='/images/checked.png'></image>
    </view>
</view>
  </view>
 <view class='hint' wx:if="{{ data.length == total && data.length != 0 }}">没有更多数据了╮(╯▽╰)╭</view>
<view class="footer {{ showHide?'footer_bgc':'' }}" wx:if="{{ data.length <= 0?'':'hide' }}" catchtap='footerTap'>取消关注
</view>

