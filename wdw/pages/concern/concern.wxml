<view class="container">
  <view class='content'>
    <view class='box clearfix' wx:for="{{ add }}" wx:key="{{ productId }}" wx:for-item="item">
      <view class='box_title'>{{ item.productName }}</view>
      <view class='box_text'>
        <text class='text'>{{ item.physicalStateName }}</text>
        <text class='text'>{{ item.supperCategoryName }}</text>
        <text class='text'>{{ item.itemCategoryName }}</text>  
        <view class='del'>删除</view>
      </view>
      <view class='price'>{{ item.unitPrice }}</view>
    <view class='shopping' bindtap='proListTap'>立即购买</view>
    </view>
  </view>
</view>