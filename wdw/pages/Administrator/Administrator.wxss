@import '../../template/empty/empty.wxss';
/* .container {} */

.content {
  width: 100%;
}

/* header 区域样式 ===========================================*/
.header {
  width: 708rpx;
  height: 198rpx;
  background-color: #9FB9EF;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  padding: 30rpx ;
  margin-bottom: 30rpx;
}

.odd,
.state,
.site {
  height: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 24rpx;
}

.state  {
  margin-top: 30rpx;
}


.site {
  width: 250rpx;
  text-align: center;
  /* font-size: 24rpx; */
  color: #fff;
  font-weight: highter;
  margin: 34rpx  auto 0;
}

.odd_left {
  color: #FFF3D0;
}

.odd_right {
  color: #fff;
  padding-right: 70rpx;
  padding-left: 10rpx;
}

/* list 区域样式 ============================================================*/
.list {
  width: 706rpx;
  height: 186rpx;
  margin: 0 auto;
  border: 1px solid #E8E8E8;
  padding: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.item {
  float: left;
  width: 33.33%;
  margin-bottom: 20rpx;
}

.item_left {
  color: #787878;
}

.item_right {
  color: #576B95;
  padding-left: 10rpx;
}

.footer {
  width: 100%;
  line-height: 90rpx;
  background-color: #F75959;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}


/* nav 区域样式============================================================= */
  .nav {
    height: 90rpx;
    padding: 0 20rpx;
    border-bottom: 9rpx solid #ECECEC;
  }

  .nav_stay,
  .nav_already,
  .nav_abnormal {
    margin-right: 60rpx;
    display: inline-block;
    line-height: 76rpx;
    font-size: 26rpx;
    color: #4F4F4F;
  }

  .active {
    color: #F75959;
    border-bottom: 6rpx solid red;
  }

  /*提示信息  ===================================*/
  .hint {
    line-height: 26rpx;
    margin-top: 50rpx;
    color: #939292;
    font-size: 26rpx;
    text-align: center;
  }

  
/* --------------------tab切换-------------------------------------------------- */
.nav {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  white-space: nowrap;
  z-index: 99;
}

.nav  {
  border-bottom: none;
}

.nav-item {
  height: 100%;
  display: inline-block;
  margin: 0 20rpx;
}

.nav-item.active {
  color: #F75959;
  border-bottom: 5rpx solid #F75959;
}

.tab-box {
  box-sizing: border-box;
  width: 100%;
}

.swiper_box {
  border-top: 8rpx solid #E8E8E8;
}
