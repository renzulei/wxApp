
page {
  background-color: #F6F6F6;
}
 .container{
   width: 100%;
 } 
.content {
  width: 706rpx;
  height: 218rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 32rpx 20rpx 30rpx 20rpx;
  box-shadow: 1px 1px 2px #ccc;
}

.content_text {
  font-size: 26rpx;
  font-weight: 600;
  color: #5E5E5E;
}

.content_btn {
  width: 100%;
  height: 46rpx;
   margin-top: 10rpx; 
}

.text {
  display: inline-block;
  font-size: 22rpx;
  margin-right: 40rpx;
  padding: 0 20rpx;
  background-color: #F2F2F2;
  line-height: 46rpx;
  color: #8C8C8C;
}

.del {
  float: right;
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-right: 30rpx;
  color: #576B95;
}

.price {
  margin-top: 30rpx;
  width: 200rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  font-weight: 600;
  color: #F75959;
}

.shopping {
  font-size: 24rpx;
  font-weight: 600;
  width: 146rpx;
  border: 1px solid #f75959;
  text-align: center;
  line-height: 52rpx;
  color: #f75959;
  border-radius: 8rpx;
  float: right;
  margin-top: -60rpx;
}