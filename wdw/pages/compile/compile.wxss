.content {
  width: 100%;
}

/* list 区域样式========================================== */

.list {
  height: 98rpx;
  border-bottom: 1px solid #eee;
  position: relative;
  padding: 0 20rpx;
}

.left {
  float: left;
  line-height: 98rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: #5E5E5E;
}

.section {
  float: left;
  line-height: 98rpx;
  font-size: 24rpx;
}

.picker {
  color: #808080;
}

.icon {
  width: 0;
  height: 0;
  border-top: 20rpx solid #ccc;
  border-bottom: 20rpx solid #fff;
  border-left: 14rpx solid #fff;
  border-right: 14rpx solid #fff;
  position: absolute;
  top: 38rpx;
  right: 100rpx;
}

.input {
  display: inline-block;
  margin-top: 22rpx;
  width: 550rpx;
  font-size: 24rpx;
}

/* footer区域样式========================================== */

.footer {
  height: 50rpx;
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.footer_icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}

.footer_icon image {
  width: 50rpx;
  height: 50rpx;
}

.img_right {
  position: absolute;
  tab-size: 0;
  left: 0;
}

.footer_text {
  color: #808080;
  font-size: 24rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
}

/* 所在地标签样式======================================= */
.picker {
  width: 400rpx;
  height: 98rpx;
  color: #000;
}

.picker_input {
  display: inline-block;
  width: 100%;
  height: 100%;
}

.radio-wrap {
  margin-right: 20rpx;
  margin-top: -4rpx;
}


/* 保存样式=================== */

page {
  position: relative;
}

.save {
  width: 100%;
   height: 90rpx; 
  text-align: center;
  line-height: 90rpx;
  background-color: #888;
  font-size: 30rpx;
  color: #fff;
  position: fixed;
  bottom: 0;
}

.save_input {
  display: block;
  width: 100%;
  height: 90rpx;
  color: #fff;
}
